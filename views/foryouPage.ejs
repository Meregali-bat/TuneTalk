
  <div class="posts">
      <% posts.forEach((post) => { %>
      <div class="post">
       <div class="post-header">
        <div class="foto-coluna">
          <a href="/perfil/<%= post.autorId %>">
            <img src="<%= post.fotoPerfil %>" alt="Foto de perfil do usuário" class="user-profile-picture">
          </a>
        </div>
    <a href="/post/<%= post.idpost %>">
        <div class="post-coluna">
          <span class="autor-post"><%= post.autor %></span>
          <span class="texto-post"><%= post.texto %></span>
        </div>
    
       </div>
          <% if ( post.postType === 'undefined') { post.postType = 'música'; } %>
                              <% if (post.postType === 'album') { %>
                                <div class="container-album">
                                  <img src="<%= post.posterAlbum %>" alt="Poster do álbum" class="album-poster">
                                  <div class="column">
                                    <h2 class="titulo-album"><%= post.albumName %></h2>
                                    <h3 class="artist-name">
                                      <%= post.artistName %> • <%= post.postType %> • <%= new Date(post.releaseDate).getFullYear() %> • 
                                      <% for(let i = 0; i < 5; i++) { %>
                                        <% if(post.nota > i) { %>
                                          <% if(post.nota > i && post.nota < i+1) { %>
                                            <i class="bi bi-star-half"></i>
                                          <% } else { %>
                                            <i class="bi bi-star-fill"></i>
                                          <% } %>
                                        <% } else { %>
                                          <i class="bi bi-star"></i>
                                        <% } %>
                                      <% } %>
                                    </h3>
                                  </div>
                                </div>
                              <% } else { %>
                                <div class="container-musica">
                                  <img src="<%= post.posterMusica %>" alt="Poster da música" class="music-poster">
                                  <div class="column">
                                    <h2 class="titulo-musica"><%= post.musicName %></h2>
                                    <h3 class="artist-name">
                                      <%= post.artistName %> • <%= post.postType %> • <%= new Date(post.releaseDate).getFullYear() %> • 
                                      <% for(let i = 0; i < 5; i++) { %>
                                        <% if(post.nota > i) { %>
                                          <% if(post.nota > i && post.nota < i+1) { %>
                                            <i class="bi bi-star-half"></i>
                                          <% } else { %>
                                            <i class="bi bi-star-fill"></i>
                                          <% } %>
                                        <% } else { %>
                                          <i class="bi bi-star"></i>
                                        <% } %>
                                      <% } %>
                                    </h3> 
                                  </div>
                                </div>

                              <% } %>
                              <div class="interacoes">
                                <button type="button" class="btn botao-interacao" >
                                  <i class="bi bi-chat"></i> <small class="comment-count"><%= post.quantidadeComentarios %></small>
                                </button>
                                <a class="likes-count" href="/post/curtir/<%- post.idpost %>"><i class="bi bi-heart btn botao-interacao"></i>
                                  <%= post.likes %> </small>
                              </a>
                              </div>
                            </a>
                            
      </div>
      <% }); %>
      <div class="fixed-bottom mb-3">
        <span class="botão-criarpost"><i class="bi bi-plus"></i></span>
        <div id="overlay"></div>
        <div id="search-bar">
            <input type="text" id="search-input" placeholder="Digite a música">
            <div id="search-results"></div>
        </div>
    </div>
  </div>

  <body>

    <!-- Api Spotify -->
    <script src="/script/apiSpotify.js"></script>
  </body>
