<div class="row mt-5" style="margin: 0;">
    
    <% posts.forEach((post) => { %>
        <div class="col-3"></div>
    <div class="col-md-6">
        <div class="card mb-4" style="border: none;">
            <div class="card-body post-container" >
                <h2><%= post.musicName %></h2> <!-- Adicionado aqui -->
                <h2><%= post.title %></h2>
                <p class="card-text"><%= post.texto %></p>
                <div class="d-flex justify-content-between align-items-center">
                    <small><i class="bi bi-share"></i></small>
                    <a href="/post/curtir/<%- post.idpost %>"><i class="bi bi-heart btn botao-like" ></i> <%= post.likes %>  </small></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
    <% }); %>   
</div>
<div class="fixed-bottom mb-5 mr-5">
        <span class="botão-criarpost"><i class="bi bi-plus"></i></span>
        <div id="overlay"></div>
        <div id="search-bar">
            <input type="text" id="search-input" placeholder="Digite a música">
            <div id="search-results"></div>
        </div>
</div>

