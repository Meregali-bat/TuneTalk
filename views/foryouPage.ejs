<div class="row mt-5" style="margin: 0;">
    <div class="col-3"></div>
    <% posts.forEach((post) => { %>
    <div class="col-md-6">
        <div class="card mb-4" style="border: none;">
            <div class="card-body" id="post-container">
                <h2><%= post.title %></h2>
                <p class="card-text"><%= post.texto %></p>
                <div class="d-flex justify-content-between align-items-center">
                    <small><i class="bi bi-share"></i></small>
                    <a href="/post/curtir/<%- post.idpost %>"><i class="bi bi-heart btn botao-like" ></i> <%= post.likes %>  </small></a>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
    <div class="col-3"></div>
</div>
